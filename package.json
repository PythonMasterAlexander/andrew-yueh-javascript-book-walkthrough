{
  "name": "andrew-yueh-javascript-book-walkthrough",
  "version": "1.0.1",
  "main": "index.js",
  "repository": "git@github.com:PythonMasterAlexander/andrew-yueh-javascript-book-walkthrough.git",
  "author": "alexander <alexanderhardeland@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.1.0",
    "http-server": "^14.1.1",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "3.2.5",
    "sass": "^1.75.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md, scss}": "prettier --write"
  },
  "scripts": {
    "build": "sass ./src/scss:./dist/styles",
    "start": "concurrently \"http-server ./ -o\" \"sass --watch ./src/scss:./dist/styles\"",
    "prepare": "husky install",
    "check-format": "yarn prettier ./src/js/**/*.js --check",
    "format": "yarn prettier ./src/js/**/*.js --write",
    "lint": "yarn eslint ./src/js/**/*.js"
  }
}
